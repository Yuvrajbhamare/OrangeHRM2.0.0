<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="WARN">
	<properties>
		<property name="basePath">./logs/</property>
	</properties>
	
	
  <Appenders>
    <Console name="CONSOLE" target ="SYTEM_OUT"><!--1-->
      <PatternLayout pattern="%d{HH:mm:ss.SSS}[%t]%-5level % logger{36} - %msg%n"/>
    </Console>
    
    <RollingFile name="File"  filename ="${basepath}/automation.log" filepattern ="${basepath}/automation-%d{yyyy-MM-DD}">
    <patternLayout  pattern ="%d{HH:mm:ss.SSS}[%t]%-5level%logger{36} - %msg%n"/>
    <SizeBasedTriggeringPolicy size= "5000"	/>
    </RollingFile>
    
 
  </Appenders>
  <Loggers>
    <Root level="INFO"> <!--4here you can use multiple log levels-All<Trace<Debug<Info<Warn<Error<Fatal<off-->
      <AppenderRef ref="File" />
      </Root>
      
  </Loggers>
</Configuration>
